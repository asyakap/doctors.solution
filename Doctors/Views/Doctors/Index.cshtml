@{
  Layout = "_Layout";
}

@using Doctors.Models;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Doctor doctor in Model)
    {
      <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) | @doctor.Specialty.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new doctor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>