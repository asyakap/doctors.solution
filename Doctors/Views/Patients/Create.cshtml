@{
  Layout = "_Layout";
}

@model Doctors.Models.Patient

<h4>Add a new patient</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Birthday)
    @Html.TextBoxFor(model => model.Birthday, new { type = "date"} )

    <input type="submit" value="Add new patient" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all tags", "Index")</p>